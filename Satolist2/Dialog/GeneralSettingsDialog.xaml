<Window x:Class="Satolist2.Dialog.GeneralSettingsDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Satolist2.Dialog"
		mc:Ignorable="d"
		Title="GeneralSettingsDialog" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		
		<StackPanel Margin="5" Grid.Row="0">
			<CheckBox Content="Owned SSTPによるトークの送信" />
			<TextBlock Text="リスト化した辞書の項目感に空白行を挿入する" />
			<TextBox Text="" />
		</StackPanel>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Margin="3" Width="100"/>
			<Button Content="キャンセル" Margin="3" Width="100" />
		</StackPanel>
	</Grid>
</Window>
