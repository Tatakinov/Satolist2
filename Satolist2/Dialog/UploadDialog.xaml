															<TextBlock Text="{Binding Url}" />
														</StackPanel>

														<Path Grid.Row="1" Grid.Column="0" Height="20" Width="20" HorizontalAlignment="Center" Stretch="Uniform" Fill="DarkSlateGray" VerticalAlignment="Center" Data="M7 14C5.9 14 5 13.1 5 12S5.9 10 7 10 9 10.9 9 12 8.1 14 7 14M12.6 10C11.8 7.7 9.6 6 7 6C3.7 6 1 8.7 1 12S3.7 18 7 18C9.6 18 11.8 16.3 12.6 14H16V18H20V14H23V10H12.6" />
