<UserControl x:Class="Satolist2.Control.TextEditor"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Satolist2.Control"
			 mc:Ignorable="d" 
			 xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
			 d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<TextBox TextWrapping="Wrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"
				 Text="{Binding TextFile.Body, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="3" />
	</Grid>
</UserControl>
