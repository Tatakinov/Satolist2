<UserControl x:Class="Satolist2.Control.StartMenu"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Satolist2.Control"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Text="さとりすとへようこそ！　テスト版です！" />
		
		<TextBlock Grid.Row="1" Text="ダブルクリックでゴーストを開く" Margin="0 10 0 0" />

		<ListView Grid.Row="2" ItemsSource="{Binding GhostList}" SelectedItem="{Binding SelectedItem}" SelectionMode="Single">

			<ListView.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<TextBlock FontSize="17" Text="{Binding Name}" />
						<StackPanel Orientation="Horizontal">
							<Button Command="{Binding ToggleFavoriteCommand}">
								<Path Fill="Yellow">
									<Path.Style>
										<Style TargetType="Path">
											<Setter Property="Data" Value="M12,15.39L8.24,17.66L9.23,13.38L5.91,10.5L10.29,10.13L12,6.09L13.71,10.13L18.09,10.5L14.77,13.38L15.76,17.66M22,9.24L14.81,8.63L12,2L9.19,8.63L2,9.24L7.45,13.97L5.82,21L12,17.27L18.18,21L16.54,13.97L22,9.24Z" />
											<Style.Triggers>
												<DataTrigger Binding="{Binding IsFavorite}" Value="True">
													<Setter Property="Data" Value="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z"/>
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</Path.Style>
								</Path>
							</Button>
							<TextBlock FontSize="12" Margin="0 0 10 0">
								<TextBlock.Style>
									<Style TargetType="TextBlock">
										<Setter Property="Text" Value="最近開いたゴースト" />
										<Style.Triggers>
											<DataTrigger Binding="{Binding IsFavorite}" Value="True">
												<Setter Property="Text" Value="お気に入りのゴースト"/>
												<Setter Property="Foreground" Value="Blue"/>
											</DataTrigger>
											<DataTrigger Binding="{Binding IsRunning}" Value="True">
												<Setter Property="Text" Value="起動中のゴースト" />
												<Setter Property="Foreground" Value="Green"/>
											</DataTrigger>
										</Style.Triggers>
									</Style>
								</TextBlock.Style>
							</TextBlock>
							<TextBlock FontSize="12" Text="{Binding Path}" />
						</StackPanel>
						
						<StackPanel.Resources>
							<Style TargetType="TextBlock">
								<Style.Triggers>
									<DataTrigger Binding="{Binding IsRunning}" Value="True">
										<Setter Property="Foreground" Value="Green"/>
									</DataTrigger>
									<DataTrigger Binding="{Binding IsFavorite}" Value="True">
										<Setter Property="Foreground" Value="Blue"/>
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</StackPanel.Resources>
						
					</StackPanel>
				</DataTemplate>
			</ListView.ItemTemplate>

			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick" />
				</Style>
			</ListView.ItemContainerStyle>

		</ListView>

	</Grid>
</UserControl>
