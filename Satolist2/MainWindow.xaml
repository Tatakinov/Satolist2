<Window x:Class="Satolist2.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ctl="clr-namespace:Satolist2.Control"
		xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
		mc:Ignorable="d"
		Title="MainWindow" Height="800" Width="1200">
	<Window.InputBindings>
		<KeyBinding Gesture="CTRL+S" Command="{Binding SaveFileCommand}" />
	</Window.InputBindings>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Menu Grid.Row="0">
			<MenuItem Header="ファイル">
				<MenuItem Header="上書き保存" Command="{Binding SaveFileCommand}" InputGestureText="Crrl+S"/>
				<Separator />
				<MenuItem Header="編集中のゴーストをエクスプローラで開く" Command="{Binding OpenGhostDirectoryCommand}" />
			</MenuItem>
			<MenuItem Header="オプション">
				<MenuItem Header="挿入メニューのカスタマイズ" Command="{Binding EditInsertPaletteCommand}" />
			</MenuItem>
		</Menu>
		
		<avalonDock:DockingManager Grid.Row="1">
			<avalonDock:LayoutRoot x:Name="LayoutRoot">
				<avalonDock:LayoutPanel x:Name="VerticalPanel" Orientation="Vertical">
					
				</avalonDock:LayoutPanel>
			</avalonDock:LayoutRoot>
		</avalonDock:DockingManager>
	</Grid>
</Window>
