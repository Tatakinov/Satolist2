<UserControl x:Class="SatolistDocument.Control.H3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SatolistDocument.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Orientation="Horizontal" Margin="0 3 3 3">
		<TextBlock Text="◆" FontWeight="Bold" FontSize="13" />
	    <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=local:H3},FallbackValue=Text}" FontWeight="Bold" FontSize="13" />
	</StackPanel>
</UserControl>
